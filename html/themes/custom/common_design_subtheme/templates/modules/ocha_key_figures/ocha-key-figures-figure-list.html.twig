{#

/**
 * @file
 * Template for a list of files.
 *
 * Available variables:
 * - attributes: list attributes
 * - figures: list of renderable figures.
 */

#}
{% if figures is not empty %}
{% set attributes = attributes ?? create_attribute() %}
<dl{{ attributes.addClass('uno-figures') }}>
  {% for figure in figures %}
  {{ figure|without('#prefix', '#suffix') }}
  {% endfor %}
</dl>
{% endif %}

