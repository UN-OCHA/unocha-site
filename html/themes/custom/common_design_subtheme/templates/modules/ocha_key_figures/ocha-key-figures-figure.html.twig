{#

/**
 * @file
 * Template for a list of files.
 *
 * Available variables:
 * - attributes: wrapper attributes
 * - label_attributes: label attributes
 * - value_attributes: value attributes
 * - unit_attributes: value attributes
 * - label: figure label
 * - value: figure value
 * - unit: figure unit
 * - country: country name
 * - year: figure year
 */

#}
{% if label is not empty and value is not empty %}
{% set attributes = attributes ?? create_attribute() %}
{% set label_attributes = label_attributes ?? create_attribute() %}
{% set value_attributes = value_attributes ?? create_attribute() %}
{% set unit_attributes = unit_attributes ?? create_attribute() %}
{% set unit = unit ?: (figure.value_type == 'percentage' ? '%' : '') %}
<div{{ attributes.addClass('uno-figure') }}>
  <dt{{ label_attributes.addClass('uno-figure__label-wrapper') }}>
    <span{{ label_attributes.addClass('uno-figure__label') }}>{{ label }}</span>
    {%- if unit is not empty -%}
      <small{{ unit_attribute.addClass('uno-figure__unit') }}> ({{ unit }})</small>
    {%- endif -%}
  </dt>
  <dd{{ value_attributes.addClass('uno-figure__value') }}>
    {{ value == 0 ? 0 : value }}
    <span{{ label_attributes.addClass('uno-figure__year') }}>{{ year }}</span>
  </dd>
</div>
{% endif %}

