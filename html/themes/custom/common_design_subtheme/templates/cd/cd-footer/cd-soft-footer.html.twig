{%
    set classes = [
    'cd-container',
    'cd-soft-footer__inner'
  ]
%}

<section class="cd-soft-footer">
  <div{{attributes.addClass(classes)}}>
    {{ page.footer_soft}}
    {{ page.responses_nav}}
  </div>

  <div{{attributes.addClass(classes)}}>
    <!-- Begin Mailchimp Signup Form -->
    <div id="mc_embed_signup" class="uno-subscribe">
      <form action="https://reliefweb.us5.list-manage.com/subscribe/post?u=bbba5e49a58c86ed484b5a084&amp;id=45f2ec85e2" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate="">
        <div id="mc_embed_signup_scroll">
          <h2 class="visually-hidden">Subscribe</h2>
          <div class="mc-field-group">
            <label for="mce-EMAIL">Subscribe to ReliefWeb Blog</label>
            <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" placeholder="Email">
            <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button cd-button">
          </div>
          <div id="mce-responses" class="clear">
            <div class="response" id="mce-error-response" style="display:none"></div>
            <div class="response" id="mce-success-response" style="display:none"></div>
          </div>
          <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
          <div style="position: absolute; left: -5000px;" aria-hidden="true">
            <label for="mce-HONEYPOT">Do not fill in this field</label>
            <input id="mce-HONEYPOT" type="text" name="b_bbba5e49a58c86ed484b5a084_45f2ec85e2" tabindex="-1" value="">
          </div>
        </div>
      </form>
    </div>
    <!--End mc_embed_signup-->
  </div>

</section>
